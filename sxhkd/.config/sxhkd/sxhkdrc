### BSPWM config ###
# Close window
super + w
	bspc node -c

# Restart bspwm
super + control + r
        bspc wm -r

# Leave bspwm
super + control + 0
	bspc quit

# Change window in focus
super + {h, l}
	bspc node -f {west, east}

# Focus the next/previous node in the current desktop
super + {j, k}
	bspc node -f {next,prev}.local

# Move window
super + control + {h, j, k, l}
	bspc node -s {west, south, north, east} --follow

# Change to desktop x
super + {1-8}
	bspc desktop -f ^{1-8}

# Move x to desktop y
super + shift + {1-8}
	bspc node -d ^{1-8}

# Resize window
super + {y, u, i, o}
	bspc node -z {left -10 0, bottom 0 10, top 0 -10, right 10 0}

super + control + {y, u, i, o}
	bspc node -z {right -10 0, top 0 10,,bottom 0 -10, left 10 0}

# Toggle monocle layout
super + Tab
	bspc desktop -l next

# Toggle floating window
super + control + space
	bspc node -t "~floating"

# Make focused window fullscreen
super + f
	bspc node -t "~fullscreen"

### Screenlocker ###
super + control + 9
        i3lock -f -i ~/Pictures/Wallpapers/lockscreen.png

### Kill window ###
super + control + x
	xdotool getwindowfocus windowkill

# Restart hotkey daemon
super + q
	killall -SIGUSR1 sxhkd && \
	notify-send -t 1500 "sxhkd" "config reloaded"

### Keybindings for programs ###
# Launch terminal file manager
super + v
	$TERMINAL ranger
# Launch calendar app
super + c
	$TERMINAL calcurse
# Launch music player
super + m
	$TERMINAL cmus
# Launch network manager
super + n
	$TERMINAL nmtui
# Launch application launcher
super + r
	rofi -show-icons -matching glob -show drun
# Launch terminal
super + Return
	$TERMINAL
# Launch gui file manager
super + F1
        pcmanfm
# Launch web browser
super + F2
	$BROWSER
# Launch code editor
super + F3
	code
# Launch system monitor
super + F4
	$TERMINAL htop
# Launch mail client
super + F5
	thunderbird

### Screenshot ###
# Take a full screenshot and copy to clipboard
Print
	flameshot full -c
# Take a full screenshot and save to to Pictures/
control + Print
	flameshot full -p ~/Pictures
# Select an area and take a screenshot
shift + Print
	flameshot gui

### Volume Control ###
super + {Up, Down}
	pactl -- set-sink-volume 0 {+2%, -2%}

### Music Control ###
# Previous and next song
super + {comma, period}
	cmus-remote {--prev, --next}
# Rewind and forward song
super + control + {comma, period}
	cmus-remote -C {"seek -2", "seek +2"}
# Pause
super + p
	cmus-remote -u
